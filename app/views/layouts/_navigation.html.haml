        .form-group
          %select#search_type.form-control{name: 'search_type'}
            %option{value: :movies, selected: (params[:search_type] == 'movies')} Movies
            %option{value: :tv_shows, selected: (params[:search_type] == 'tv_shows')} TV Shows
          %input.form-control{:placeholder => "Search...", :type => "text", name: 'query'}
        %button.btn.btn-default{:type => "submit"}
          Search
      %ul.nav.navbar-nav
        %li
          = link_to movie_downloads_path do
            = fa_icon :film
