.row
  .col-md-12
    %h1
      TV Shows

.row
  .col-md-12
    - @view.to_a.group_by(&:watching).each do |watching, group|
      - if watching
        %h2 Watching
      - else
        %h2 Not watching
      - group.in_groups_of(2) do |tv_shows|
        .row.p-t
          = render partial: 'tv_shows/index/tv_show', collection: tv_shows.compact
